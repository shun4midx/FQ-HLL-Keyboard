    <!-- Base application theme. -->
    <style name="Theme.FQHLLKeyboard" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/custom_fqhll_logo_blue</item>
