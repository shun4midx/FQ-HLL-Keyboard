        <item name="colorSecondaryVariant">@color/custom_fqhll_banner_pink</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <item name="android:actionBarStyle">@style/FQHLL.ActionBar</item>
        <item name="actionBarStyle">@style/FQHLL.ActionBar</item>
    </style>

