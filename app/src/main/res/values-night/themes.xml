<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FQHLLKeyboard" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/custom_fqhll_logo_blue</item>
        <item name="colorPrimaryVariant">@color/custom_fqhll_banner_blue</item>
        <item name="colorOnPrimary">@color/custom_fqhll_logo_purple</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/custom_fqhll_banner_pink</item>
        <item name="colorSecondaryVariant">@color/custom_fqhll_banner_pink</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.FQHLLKeyboard.Black" parent="Theme.FQHLLKeyboard">
        <item name="keyColor">@color/custom_dark_grey</item>
        <item name="keyTextColor">@color/white</item>
        <item name="keyboardBackgroundColor">@color/black</item>
        <item name="keyBorderColor">@color/custom_dark_grey</item>
        <item name="keyPopupBackgroundColor">@color/custom_cyan</item>
        <item name="keyPopupTextColor">@color/custom_dark_blue</item>
    </style>

    <style name="Theme.FQHLLKeyboard.DarkBlue" parent="Theme.FQHLLKeyboard">
        <item name="keyColor">@color/custom_dark_blue</item>
        <item name="keyTextColor">@color/custom_cyan</item>
        <item name="keyboardBackgroundColor">@color/black</item>
        <item name="keyBorderColor">@color/custom_fqhll_logo_wire_light_blue</item>
        <item name="keyPopupBackgroundColor">@color/custom_cyan</item>
        <item name="keyPopupTextColor">@color/custom_dark_blue</item>
    </style>

    <style name="Theme.FQHLLKeyboard.Shun" parent="Theme.FQHLLKeyboard">
        <item name="keyColor">@color/shun_blue</item>
        <item name="keyTextColor">@color/custom_fqhll_logo_pink</item>
        <item name="keyboardBackgroundColor">@color/purple_900</item>
        <item name="keyBorderColor">@color/custom_blue</item>
        <item name="keyPopupBackgroundColor">@color/custom_cyan</item>
        <item name="keyPopupTextColor">@color/custom_dark_blue</item>
    </style>

    <style name="Theme.FQHLLKeyboard.Ducky" parent="Theme.FQHLLKeyboard">
        <item name="keyColor">@color/teal_gradient_7</item>
        <item name="keyTextColor">@color/custom_cyan</item>
        <item name="keyboardBackgroundColor">@color/teal_gradient_1</item>
        <item name="keyBorderColor">@color/teal_gradient_5</item>
        <item name="keyPopupBackgroundColor">@color/custom_cyan</item>
        <item name="keyPopupTextColor">@color/custom_dark_blue</item>
    </style>

    <style name="Theme.FQHLLKeyboard.CottonCandy" parent="Theme.FQHLLKeyboard">
        <item name="keyColor">@color/cotton_candy_light_pink</item>
        <item name="keyTextColor">@color/white</item>
        <item name="keyboardBackgroundColor">@color/cotton_candy_light_blue</item>
        <item name="keyBorderColor">@color/custom_blue</item>
        <item name="keyPopupBackgroundColor">@color/custom_cyan</item>
        <item name="keyPopupTextColor">@color/custom_dark_blue</item>
    </style>

    <style name="Theme.FQHLLKeyboard.Cabbage" parent="Theme.FQHLLKeyboard">
        <item name="keyColor">@color/black</item>
        <item name="keyTextColor">@color/cabbage_green</item>
        <item name="keyboardBackgroundColor">@color/cabbage_blue</item>
        <item name="keyBorderColor">@color/cabbage_green</item>
        <item name="keyPopupBackgroundColor">@color/custom_cyan</item>
        <item name="keyPopupTextColor">@color/custom_dark_blue</item>
    </style>

    <style name="Theme.FQHLLKeyboard.Yellow" parent="Theme.FQHLLKeyboard">
        <item name="keyColor">@color/black</item>
        <item name="keyTextColor">@color/custom_yellow</item>
        <item name="keyboardBackgroundColor">@color/black</item>
        <item name="keyBorderColor">@color/black</item>
        <item name="keyPopupBackgroundColor">@color/custom_cyan</item>
        <item name="keyPopupTextColor">@color/custom_dark_blue</item>
    </style>

    <style name="Theme.FQHLLKeyboard.Teal" parent="Theme.FQHLLKeyboard">
        <item name="keyColor">@color/black</item>
        <item name="keyTextColor">@color/teal_200</item>
        <item name="keyboardBackgroundColor">@color/black</item>
        <item name="keyBorderColor">@color/black</item>
        <item name="keyPopupBackgroundColor">@color/custom_cyan</item>
        <item name="keyPopupTextColor">@color/custom_dark_blue</item>
    </style>
</resources>